<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <ul>
        <li>1</li>
        <li>2</li>
        <li>3</li>
    </ul>
</body>
<script>
    const ul = document.querySelector('ul');
    console.log('Padre di <ul>:', ul.parentElement);
    const secondLi = ul.children[1];
    console.log('Secondo <li>:', secondLi);
    console.log('Fratello successivo:', secondLi.nextElementSibling);
console.log('Fratello precedente:', secondLi.previousElementSibling);
</script>
</body>
</html>

